<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../head.ejs') %>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col main-grid">
            <center>
                    <br><br><br><br><br><br>
                <%- include('../menu.ejs') %>
            </center>
            </div>
            <div class="col-10">
              <div class="container">
                <div class="row">
                  <div class="col">
                  </div>
                  <div class="col-7">
                    <br><br><br><br>
                    <center><font size="30">Edit biodata user</font></center><br><br>
                    <form action="/user-biodata/update/<%= data.id  %> " method="post">
                        <table>
                            <div class="input-group flex-nowrap">
                                <tr>
                                    <td>Full Name &nbsp;&nbsp;&nbsp;</td>
                                    <td><input  type="text" class="form-control" name="full_name" placeholder="Full name" value="<%= data.full_name  %>" aria-label="Full name" aria-describedby="addon-wrapping"></td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><input  type="text" class="form-control" name="email" placeholder="Email" aria-label="email" value="<%= data.email  %>" aria-describedby="addon-wrapping"></td>
                                </tr>
                                <tr>
                                    <td>Gender</td>
                                    <td><input  type="text" class="form-control" name="gender" placeholder="Gender" value="<%= data.gender  %>" aria-label="gender" aria-describedby="addon-wrapping"></td>
                                </tr>
                                <tr>
                                    <td>Birthday</td>
                                    <td><input  type="date" class="form-control" value="<%= data.birthday  %>" name="birthday" aria-describedby="addon-wrapping"></td>
                                </tr>
                            </div>
                        </table>
                        <br>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                  </div>
                  <div class="col">
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</body>
</html>